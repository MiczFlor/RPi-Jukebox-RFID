[Unit]  
Description=RFID-Reader Service
After=network.target iptables.service firewalld.service mopidy.service

[Service]
User=pi
Group=pi
Restart=always
WorkingDirectory=/home/pi/RPi-Jukebox-RFID
ExecStart=/usr/bin/python2 /home/pi/RPi-Jukebox-RFID/scripts/daemon_rfid_reader.py

[Install]
WantedBy=multi-user.target
